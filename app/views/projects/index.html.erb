<!DOCTYPE html>
<html>
  <body class="projbody">






  <% @projects.each do |project|  %>

  <div class="project" id="<%= dom_id(project)  %>">
    <h3><%= project.name  %></h3>
    <p><%= project.technologies_used  %></p>



    <div class="nav">

      <%= link_to "Show", project  %>

      <% if policy(project).update? %>
      <%= link_to "Edit", edit_project_path(project) %>
      <% end %>

      <% if policy(project).destroy? %>
      <%= link_to "Destroy", project, method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>

      <% if policy(project).publish? && project.published? == false %>
        <%= button_to 'Publish', project_path(project, project: {published: true}), method: :put, :class => "btn btn-success" %>
      <% end %>
    </div>

  </div>
  <% end %>

  <br />

  <div>
  <% if policy(Project).create? %>
  <%= link_to "New project", new_project_path  %>
  <% end %>
  </div>






  </body>
</html>
